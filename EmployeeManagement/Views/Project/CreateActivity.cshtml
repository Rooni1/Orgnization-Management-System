@model EmployeeManagement.ViewModels.ActivityVM
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Create Activity</h1>
    </div>

</div>
<form method="post" action="CreateActivity">

    <div class="mb-3">

        <label for= class="form-label">Task Description</label>
        <input type="text" class="form-control" asp-for="TaskDescription" readonly>
        <label for= class="form-label" hidden>TaskId</label>
        <input type="text" class="form-control" asp-for="TaskManagementId" hidden>
        <label for= class="form-label">Activity Description</label>
        <input type="text" class="form-control" asp-for="Description">
        <label for= class="form-label">Todo</label>
        <input type="text" class="form-control" asp-for="Todo">
        <label for= class="form-label">Work In Process</label>
        <input type="text" class="form-control" asp-for="WorkInProcess">
        <label for= class="form-label">Done</label>
        <input type="text" class="form-control" asp-for="Done">
        <label for= class="form-label">Start Date</label>
        <input type="text" class="form-control" asp-for="StartDate">
        <label for= class="form-label">End Date</label>
        <input type="text" class="form-control" asp-for="EndDate">
       
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>